@using DiagnosticoWeb.Code
@using System.Security.Claims
<div ng-app="SedeshuApp" ng-controller="createController" ng-init="init(@JsonSedeshu.SerializeObject(Model))">
    <partial name="_Loading_Partial" />
    <slot ng-cloak>
        <div class="card">
            <div class="card-header bg-cards text-white d-flex justify-content-between">
                @if (string.IsNullOrEmpty(Model.Id))
                {
                    <h5>Crear discapacidad</h5>
                }
                else
                {
                    <h5>Editar discapacidad</h5>
                }
                <a class="btn btn-sm btn-header" asp-controller="Discapacidad" asp-action="Index">
                    <i class="fa fa-backward"></i> Regresar
                </a>
            </div>
            <div class="card-body">
                <div class="d-flex">
                    <div class="col-4">
                        <label class="required">Id <small>{{ discapacidad.Id.length }} / 10</small></label>
                        <input class="form-control" ng-model="discapacidad.Id" maxlength="10" ng-disabled="discapacidad.IdAnterior != ''"/>
                        <span class="text-danger small">{{ errors["Id"] }}</span>
                    </div>
                    <div class="col-4">
                        <label class="required">Nombre <small>{{ discapacidad.Nombre.length }} / 255</small></label>
                        <input class="form-control" ng-model="discapacidad.Nombre" maxlength="255"/>
                        <span class="text-danger small">{{ errors["Nombre"] }}</span>
                    </div>
                    <div class="col-4">
                        <label class="required">Grados <small>{{discapacidad.GradosId.length}}</small></label>
                        <select class="selectpicker2 form-control" ng-model="discapacidad.GradosId" multiple>
                            <option ng-repeat="grado in Grados" ng-value="grado.Id">{{grado.Nombre}}</option>
                        </select>
                        <span class="text-danger small">{{ errors["Grados"] }}</span>
                    </div>
                </div>
                <div class="col-sm-12 mt-3">
                    <div class="row">
                        <div class="col-sm-12">
                            <span class="badge badge-info">Grados</span>
                            <table class="table table-responsive-sm table-hover mt-3">
                                <tr ng-repeat="grado in discapacidad.GradosId">
                                    <td>{{ ObtenerGradoNombre(grado) }}</td>
                                    <td class="no-stretch">
                                        <button class="btn btn-sm btn-danger lineal">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            @if (((ClaimsIdentity)User.Identity).HasClaim("Permiso", "catalogos.editar") || (string.IsNullOrEmpty(Model.Id) &&
                ((ClaimsIdentity)User.Identity).HasClaim("Permiso", "catalogos.crear")))
            {
                <div class="card-footer">
                    <button class="btn btn-sm btn-success" ng-click="Guardar()" ng-if="!guardando">
                        <i class="fa fa-save"></i> Guardar
                    </button>
                    <button class="btn btn-sm btn-success" ng-if="guardando" disabled>
                        <i class="fa fa-spinner fa-spin"></i> Guardar
                    </button>
                </div>
            }
        </div>
    </slot>
</div>

@section Scripts {
    <script>
        (function () {
            var app = angular.module('SedeshuApp', ['ui.bootstrap']);
            var baseUrl = document.baseURI;

            app.controller('createController',
                function ($scope, $http, $uibModal) {
                    $scope.Grados = [],
                        $scope.discapacidad = {
                            Id: "",
                            IdAnterior: "",
                            Nombre: "",
                            GradosId: [],
                        };
                    $scope.guardando = false;

                    $scope.init = function (discapacidad) {
                        $scope.discapacidad.Id = discapacidad.Id;
                        $scope.discapacidad.IdAnterior = discapacidad.IdAnterior;
                        $scope.discapacidad.Nombre = discapacidad.Nombre;
                        $scope.discapacidad.GradosId = discapacidad.GradosId;
                        $scope.Grados = discapacidad.Grados;
                        $scope.refreshSelect();
                    };

                    $scope.ObtenerGradoNombre = function (id) {
                        let grado = _.find($scope.Grados, function (grado) {
                            return grado.Id == id;
                        });

                        return grado != null ? grado.Nombre : '';
                    };

                    $scope.refreshSelect = _.debounce(function () {
                        $('.selectpicker2').selectpicker('refresh');
                    }, 200);

                    $scope.Guardar = function () {
                        $scope.guardando = true;
                        $http.post('/Discapacidad/Guardar', $scope.discapacidad).then(function (response) {
                            if (response.data == "ok") {
                                window.location.href = baseUrl + 'Discapacidad';
                            } else {
                                $scope.cargarErrores(response.data);
                            }
                            $scope.guardando = false;
                        });
                    }

                    $scope.cargarErrores = function (errors) {
                        $scope.errors = [];
                        for (var i = 0; i < errors.length; i++) {
                            $scope.errors[errors[i].Key] = errors[i].Error;
                        }
                    };
                })
        })();
    </script>
}