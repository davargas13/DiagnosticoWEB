@using DiagnosticoWeb.Code;
@using System.Security.Claims;
<div ng-app="SedeshuApp" ng-controller="createController" ng-init="init(@JsonSedeshu.SerializeObject(Model))">
    <partial name="_Loading_Partial" />
    <slot ng-cloak>
        <div class="card">
            <div class="card-header bg-cards text-white">
                @if (string.IsNullOrEmpty(Model.Id))
                {
                    <h5 class="float-left">Crear estado</h5>
                }
                else
                {
                    <h5 class="float-left">Editar estado</h5>
                }
                <a class="btn btn-sm btn-header float-right" asp-controller="Estado" asp-action="Index">
                    <i class="fa fa-backward"></i> Regresar
                </a>
            </div>
            <div class="card-body">
                <div class="d-flex flex-wrap">
                    <div class="col-6">
                        <div>
                            <label class="required">Id <small>{{ estado.Id.length }} / 10</small></label>
                            <input class="form-control" ng-model="estado.Id" maxlength="10" ng-change="seleccionarId()" ng-disabled="estado.IdAnterior != ''"/>
                        </div>
                        <span class="text-danger small">{{ errors["Id"] }}</span>
                    </div>
                    <div class="col-6">
                        <div>
                            <label class="required">Clave <small>{{ estado.Clave.length }} / 10</small></label>
                            <input class="form-control" ng-model="estado.Clave" maxlength="10" disabled />
                        </div>
                        <span class="text-danger small">{{ errors["Clave"] }}</span>
                    </div>
                    <div class="col-sm-6">
                        <div>
                            <label class="required">Abreviación <small>{{ estado.Abreviacion.length }} / 2</small></label>
                            <input class="form-control" ng-model="estado.Abreviacion" maxlength="2" />
                        </div>
                        <span class="text-danger small">{{ errors["Abreviacion"] }}</span>
                    </div>
                    <div class="col-sm-6">
                        <div>
                            <label class="required">Nombre <small>{{ estado.Nombre.length }} / 250</small></label>
                            <input class="form-control" ng-model="estado.Nombre" maxlength="250" />
                        </div>
                        <span class="text-danger small">{{ errors["Nombre"] }}</span>
                    </div>
                </div>
            </div>
            @if (((ClaimsIdentity)User.Identity).HasClaim("Permiso", "catalogos.editar") || (string.IsNullOrEmpty(Model.Id) &&
               ((ClaimsIdentity)User.Identity).HasClaim("Permiso", "catalogos.crear")))
            {
                <div class="card-footer">
                    <button class="btn btn-sm btn-success" ng-click="Guardar()" ng-if="!guardando">
                        <i class="fa fa-save"></i> Guardar
                    </button>
                    <button class="btn btn-sm btn-success" disabled ng-if="guardando">
                        <i class="fa fa-spinner fa-spin"></i> Guardar
                    </button>
                </div>
            }
        </div>
    </slot>
</div>

@section Scripts {
    <script>
        (function () {
            var app = angular.module('SedeshuApp', ['ui.bootstrap']);
            var baseUrl = document.baseURI;

            app.controller('createController',
                function ($scope, $http, $uibModal) {
                    $scope.estado = {
                        Id: 0,
                        Clave: "",
                        Nombre: "",
                    };
                    $scope.guardando = false;

                    $scope.init = function (estado) {
                        $scope.estado.Id = estado.Id;
                        $scope.estado.IdAnterior = estado.IdAnterior;
                        $scope.estado.Clave = estado.Clave;
                        $scope.estado.Abreviacion = estado.Abreviacion;
                        $scope.estado.Nombre = estado.Nombre;
                    };
                    
                    $scope.seleccionarId = function (){
                        $scope.estado.Clave = $scope.estado.Id.padStart(3, "0");
                    };

                    $scope.Guardar = function () {
                        $scope.guardando = true;
                        $http.post(baseUrl + 'Estado/Guardar', $scope.estado).then(function (response) {
                            if (response.data == "ok") {
                                window.location.href = baseUrl + 'Estado';
                            } else {
                                $scope.cargarErrores(response.data);
                            }
                            $scope.guardando = false;
                        });
                    }
                    $scope.cargarErrores = function (errors) {
                        $scope.errors = [];
                        for (var i = 0; i < errors.length; i++) {
                            $scope.errors[errors[i].Key] = errors[i].Error;
                        }
                    };
                })
        })();
    </script>
}